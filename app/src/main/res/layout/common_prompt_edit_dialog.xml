<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/no_color"
              android:gravity="center"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bgtop"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="26dp"
        android:paddingTop="26dp" >

        <TextView
            android:id="@+id/tv_common_prompt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tv_common_prompt_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:visibility="gone" />

            <EditText
                android:id="@+id/tv_common_prompt_content"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:maxLength="10"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:singleLine="true"
                android:background="@drawable/im_edit_dialog"
                android:textColor="#666666"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_common_prompt_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="内容"
            android:textColor="#dedede"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        style="@style/line_style"
        android:background="#dcdcdc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/corners_bgbottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_common_prompt_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="左按钮"
            android:textColor="#383838"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_one"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc" />

        <TextView
            android:id="@+id/tv_common_prompt_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="中按钮"
            android:textColor="#383838"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_two"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc" />

        <TextView
            android:id="@+id/tv_common_prompt_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="右按钮"
            android:textColor="#383838"
            android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>