<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="BasicInfoView">
        <attr name="ltext" format="string"></attr>
        <attr name="rtext" format="string"></attr>
    </declare-styleable>
    <declare-styleable name="CommonInfoView">
        <attr name="l_icon" format="reference"></attr>
        <attr name="r_icon" format="reference"></attr>
        <attr name="c_txt" format="string"></attr>
    </declare-styleable>
</resources>
