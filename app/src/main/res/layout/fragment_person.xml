<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLine"
    android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue">
        <android.support.v7.widget.Toolbar
            android:id="@+id/mine_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/mine_title"
            app:titleTextColor="@color/white">
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:id="@+id/mine_to_person"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/mine_title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/mine_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/fish_3"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="vertical">
                <TextView
                    android:id="@+id/mine_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="姓名"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/help"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_score"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:background="@mipmap/score"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="信誉积分"/>
            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="11.1"/>

            <ImageView
                android:id="@+id/right_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:background="@mipmap/qr"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:background="@color/grayLine"/>
    </LinearLayout>
    <block.com.blockchain.customview.CommonInfoView
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:c_txt="110"
        app:l_icon="@mipmap/phone"/>
    <block.com.blockchain.customview.CommonInfoView
        android:id="@+id/layout_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:c_txt="技术岗位"
        app:l_icon="@mipmap/work"/>
    <block.com.blockchain.customview.CommonInfoView
        android:id="@+id/layout_qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:c_txt="点击二维码获取邀请码"
        app:l_icon="@mipmap/qr"/>
    <block.com.blockchain.customview.CommonInfoView
        android:id="@+id/layout_motify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:c_txt="修改个人信息"
        app:l_icon="@mipmap/motify"/>
</LinearLayout>