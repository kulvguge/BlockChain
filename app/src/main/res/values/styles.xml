<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="BasicInfoView">
        <attr name="ltext" format="string"></attr>
        <attr name="rtext" format="string"></attr>
    </declare-styleable>
    <declare-styleable name="CommonInfoView">
        <attr name="l_icon" format="reference"></attr>
        <attr name="r_icon" format="reference"></attr>
        <attr name="c_txt" format="string"></attr>
    </declare-styleable>
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="line_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#F4F5F7</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="line_style_gray">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
